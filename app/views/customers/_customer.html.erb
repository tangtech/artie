<li>
  <%= link_to customer.name, customer %>
  | <%= customer.short_name %> <%= customer.branch %>
  | <%= customer.domain %>
  <% if current_user.admin? %>
      | <%= link_to "edit", edit_customer_path(customer.id) %>
      | <%= link_to "delete", customer, method: :delete,
                    data: { confirm: "Are you sure you want to delete this?" } %>
  <% end %>
</li>